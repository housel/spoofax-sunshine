<project name="sunshine-dependencies" default="download">

	<property name="lib.dir" value="lib" />

	<target name="download" description="--> download external dependencies">
		<mkdir dir="${lib.dir}" />
		<mkdir dir="${lib.dir}/tmp" />
		<get src="http://apache.cs.uu.nl/dist//commons/io/binaries/commons-io-2.4-bin.zip" dest="${lib.dir}/tmp" />
		<unzip src="${lib.dir}/tmp/commons-io-2.4-bin.zip" dest="${lib.dir}/tmp" />
		<move file="${lib.dir}/tmp/commons-io-2.4/commons-io-2.4.jar" todir="${lib.dir}" />

		<get src="http://ftp.nluug.nl/internet/apache/logging/log4j/2.0-beta9/apache-log4j-2.0-beta9-bin.zip" dest="${lib.dir}/tmp" />
		<unzip src="${lib.dir}/tmp/apache-log4j-2.0-beta9-bin.zip" dest="${lib.dir}/tmp" />
		<move file="${lib.dir}/tmp/apache-log4j-2.0-beta9-bin/log4j-api-2.0-beta9.jar" todir="${lib.dir}" />
		<move file="${lib.dir}/tmp/apache-log4j-2.0-beta9-bin/log4j-api-2.0-beta9-javadoc.jar" todir="${lib.dir}" />
		<move file="${lib.dir}/tmp/apache-log4j-2.0-beta9-bin/log4j-core-2.0-beta9.jar" todir="${lib.dir}" />
		<move file="${lib.dir}/tmp/apache-log4j-2.0-beta9-bin/log4j-core-2.0-beta9-javadoc.jar" todir="${lib.dir}" />

		<get src="http://repo1.maven.org/maven2/com/beust/jcommander/1.30/jcommander-1.30.jar" dest="${lib.dir}/jcommander-1.30.jar" />

		<get src="http://hydra.nixos.org/job/strategoxt-java/strategoxt-java-bootstrap/bootstrap3/latest/download/1" dest="${lib.dir}/strategoxt.jar" />

		<get src="http://search.maven.org/remotecontent?filepath=junit/junit/4.11/junit-4.11.jar" dest="${lib.dir}/junit-4.11.jar" />
		<get src="http://search.maven.org/remotecontent?filepath=org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar" dest="${lib.dir}/hamcrest-core-1.3.jar" />
    
		<get src="http://ftp.nluug.nl/internet/apache//ant/binaries/apache-ant-1.9.3-bin.zip" dest="${lib.dir}/tmp" />
		<unzip src="${lib.dir}/tmp/apache-ant-1.9.3-bin.zip" dest="${lib.dir}/tmp" />
		<move file="${lib.dir}/tmp/apache-ant-1.9.3/lib/ant.jar" todir="${lib.dir}" />
		<delete dir="${lib.dir}/tmp" />
	</target>
</project>
